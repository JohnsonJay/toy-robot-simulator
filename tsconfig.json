{
  "compilerOptions": {
    "allowJs": false,
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}
